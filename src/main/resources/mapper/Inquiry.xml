<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shop.repository.InquiryRepository">

    <select id="findByTypes" resultType="Inquiry">
        SELECT
            *
        FROM
            inquiry
        WHERE
            <foreach item="type" collection="types"
                     open="type IN (" separator="," close=")" nullable="true">
                #{type}
            </foreach>
            AND
            NOT status = 'DELETED'
        ORDER BY
            id DESC
    </select>

    <select id="findById" resultType="Inquiry">
        SELECT
            *
        FROM
            inquiry
        WHERE
            id = #{id}
    </select>

    <insert id="save" parameterType="Inquiry">
        INSERT INTO
            inquiry(user_id, type, title, contents, secret, pw)
        VALUES
            (#{userId}, #{type}, #{title}, #{contents}, #{secret}, #{pw})
    </insert>

    <update id="updateStatusToDeleted">
        UPDATE
            inquiry
        SET
            status = 'DELETED'
        WHERE
            id = #{id}
    </update>

</mapper>