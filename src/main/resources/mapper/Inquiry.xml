<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shop.repository.InquiryRepository">

    <select id="findPaymentAndDeliverys" resultType="Inquiry">
        SELECT
            *
        FROM
            inquiry
        WHERE
            type IN ('PAYMENT', 'DELIVERY')
    </select>

    <select id="findProducts" resultType="Inquiry">
        SELECT
            *
        FROM
            inquiry
        WHERE
            type IN ('RPODUCT_SIZE', 'PRODUCT_RESTOCK')
    </select>

    <select id="findExchangeAndReturns" resultType="Inquiry">
        SELECT
            *
        FROM
            inquiry
        WHERE
            type IN ('EXCHANGE', 'RETURN')
    </select>

    <select id="findById" resultType="Inquiry">
        SELECT
            *
        FROM
            inquiry
        WHERE
            id = #{id}
    </select>

    <insert id="register" parameterType="Inquiry">
        INSERT INTO
            inquiry(user_id, type, title, contents, secret, pw)
        values
            (#{userId}, #{type}, #{title}, #{contents}, #{secret}, #{pw})
    </insert>

</mapper>